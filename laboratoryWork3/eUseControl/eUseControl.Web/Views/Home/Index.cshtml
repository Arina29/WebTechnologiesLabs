@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Home";
}

@using System.Web.Optimization

<!--Header-->
<header id="head">
    <div class="container-fluid">
        <div class="row">
            <h1 class="row logo">FUN, EASY, BEAUTIFUL</h1>
            <p class="tagline"> Design Studio: Create your dream home together with the best designers</p>
        </div>
    </div>
</header>

<div class="container-fluid">
    <h3 class="text-center thin">
        Best Designers</h1>
        <div class="row">

            <div class="col-md-4">
                <div class="thumbnail">
                    <img src="~/assets/jean-louis.jpg" class="img-circle" alt="Jean Louis Deniot" />
   

                    <div class="caption h-body text-center">
                        <p>Jean-Louis Deniot</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="thumbnail">
                    <img src="~/assets/kelly-wearstler.jpg" class="img-circle" alt="Kelly Wearstler">
                    <div class="caption h-body text-center">
                        <p> Kelly Wearstler</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="thumbnail">
                    <img src="~/assets/marcel.jpg" class="img-circle" alt="Marcel Wanders">
                    <div class="caption h-body text-center">
                        <p>Marcel Wanders</p>
                    </div>
                </div>
            </div>
        </div>
</div>