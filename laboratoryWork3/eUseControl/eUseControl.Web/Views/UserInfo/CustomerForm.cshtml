@model eUseControl.Web.ViewModels.designerViewModel

@{
                /**/

                ViewBag.Title = "CustomerForm";

}

<header id="header1" style =" text-align:center"><h2>Register new information</h2></header>

@using (Html.BeginForm("Save", "UserInfo"))
{
    @Html.ValidationSummary(true, "Please fix the following errors:")
    <div class="form-group">
        <label for="Name">Name Surname</label>
        @Html.TextBoxFor(m => m.User.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.User.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.User.StyleTypesId)
        @Html.DropDownListFor(m => m.User.StyleTypesId, new SelectList(Model.StyleTypes, "Id", "StyleName"), "Select Style Type", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.User.StyleTypesId)
    </div>
    <div class="form-group">
        <label for="email">Email Adress</label>
        @Html.TextBoxFor(m => m.User.email, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.User.email)
    </div>
    <div class="form-group">
         @Html.LabelFor(u => u.User.PicturePath)
         @Html.TextBoxFor(u => u.User.PicturePath, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label for="phoneNumber">Phone Number</label>
        @Html.TextBoxFor(m => m.User.phoneNumber, "{0:(###) ###-####}", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.User.phoneNumber)
    </div>
        @Html.HiddenFor(m => m.User.Id)
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-primary save"> Save </button>
    }


